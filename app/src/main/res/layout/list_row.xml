<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/totalDayLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_mins_worked"
        android:textSize="19sp" />

    <TextView
        android:layout_toEndOf="@id/totalDayLbl"
        android:id="@+id/totalDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/totalBreakLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalDayLbl"
        android:text="@string/total_break"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/totalBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalDay"
        android:layout_toEndOf="@id/totalBreakLbl"
        android:textSize="19sp"/>

</RelativeLayout>